<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff7f7f7">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/headerExerc"
        android:background="#ff1f5c68">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise |  Exercises Name "
            android:id="@+id/exercise_name"
            android:textColor="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:layout_below="@+id/headerExerc"
        android:id="@+id/body"
        android:layout_above="@+id/footer">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/exercise_container"
            android:layout_alignParentBottom="true">

        </FrameLayout>


    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:id="@+id/footer">

        <Button
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:text="PAUSE"
            android:id="@+id/Pause_btn"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:background="#ff589310"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:text="STOP"
            android:id="@+id/Stop_btn"
            android:textColor="@android:color/white"
            android:background="#ff589310"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Pause_btn"
            android:layout_marginLeft="40dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining 0:00"
        android:id="@+id/timer_txt"
        android:textSize="24sp"
        android:textColor="#ff1f5c68"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp" />


</RelativeLayout>