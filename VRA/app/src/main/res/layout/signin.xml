<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/in_signin"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/Dark_Green"
        android:textStyle="bold|italic"
        android:textIsSelectable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/in_signup"
        android:textSize="18sp"
        android:textColor="@color/Lime_Green"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/in_Login"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:background="@color/white"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/in_email"
        android:layout_below="@id/in_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/Dark_Green"
        android:hint="EMAIL"
        android:textColorHint="#FFFFFF"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/in_pass"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/in_email"
        android:layout_alignStart="@+id/in_email"
        android:background="@color/Dark_Green"
        android:hint="PASSWORD"
        android:textColorHint="#FFFFFF"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/in_email"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:id="@+id/in_Login"
        android:layout_below="@+id/in_pass"
        android:layout_alignEnd="@+id/in_pass"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/in_pass"
        android:background="@color/Lime_Green"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten your password?"
        android:id="@+id/forgottenPass"
        android:textSize="18sp"
        android:textColor="@color/Lime_Green"
        android:textIsSelectable="false"
        android:padding="4dp"
        android:background="@color/white"
        android:layout_below="@+id/in_Login"
        android:layout_alignStart="@+id/in_Login"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/in_signup"
        android:textStyle="italic"/>


</RelativeLayout>