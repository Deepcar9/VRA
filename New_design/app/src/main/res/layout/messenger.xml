<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff1f5c68"
        android:orientation="horizontal"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:id="@+id/Contacts"
                android:layout_centerHorizontal="true"
                android:textSize="28sp"
                android:textIsSelectable="false"
                android:layout_marginTop="10dp"
                android:textColor="#ff1f5c68" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/Contacts"
                android:id="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/line"
                android:layout_margin="10dp">
            </ListView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:background="@android:drawable/ic_input_add"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/msg_messages"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Person"
                android:id="@+id/Person"
                android:textSize="30sp"
                android:layout_alignBottom="@+id/icon_person"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_toStartOf="@+id/loadingProgressBar"
                android:layout_toEndOf="@+id/icon_person"
                android:textColor="#ff1f5c68" />

            <ImageView
                android:id="@+id/icon_person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="default_profile"
                android:focusable="false"
                android:background="@drawable/default_profile"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                android:layout_marginLeft="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/line2">
            </ImageView>

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/Person"
                android:layout_alignEnd="@+id/line2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/Person"
                android:id="@+id/line2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <ListView
                android:id="@+id/SMS_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_sms"
                android:padding="6dip"
                android:layout_above="@+id/NewMSG"
                android:headerDividersEnabled="false"
                android:layout_below="@+id/icon_person">

            </ListView>

            <LinearLayout
                android:id="@+id/NewMSG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#ff1f5c68"
                android:padding="3dp">

                <EditText
                    android:id="@+id/addSMStext"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@android:color/white">
                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/addSMSbtn"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textColor="@android:color/white"
                    android:background="#ff589310" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>