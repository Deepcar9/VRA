<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Ligher_Green">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/content_login"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VRA"
        android:id="@+id/VRA"
        android:layout_gravity="center_horizontal|top"
        android:textSize="40sp"
        android:textIsSelectable="false"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_above="@+id/logo_text"
        android:layout_alignStart="@+id/logo_text"/>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="fill_parent"
        android:id="@+id/content_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vestibular Rehabilitation Application "
        android:id="@+id/logo_text"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_above="@+id/content_login"
        android:layout_toEndOf="@+id/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TERMS OF SERVICE"
        android:id="@+id/terms"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIVACY POLICY"
        android:id="@+id/policy"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/terms"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textIsSelectable="true" />

</RelativeLayout>