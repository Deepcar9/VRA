<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="520dp"
    android:layout_height="350dp"
    android:background="@android:color/white"
    android:id="@+id/custom_dialog_first_rl"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/update_user"
        android:layout_alignParentStart="true"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE USER"
                android:id="@+id/update_user"
                android:textSize="30sp"
                android:textColor="#ff1f5c68"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/username_text"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:id="@+id/username_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/update_name"
                android:layout_marginTop="60dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/update_name"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="NAME"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/username_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/email_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_below="@+id/update_name"
                android:layout_alignStart="@+id/update_name"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/update_email"
                android:inputType="textEmailAddress"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="EMAIL"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/email_text"
                android:layout_alignStart="@+id/email_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:id="@+id/country_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_below="@+id/update_email"
                android:layout_alignStart="@+id/update_email"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/update_country"
                android:inputType="text"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="COUNTRY"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/country_text"
                android:layout_alignStart="@+id/country_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Password"
                android:id="@+id/oldpass_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/oldpass"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="OLD PASSWORD"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/oldpass_text"
                android:layout_alignStart="@+id/oldpass_text"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:id="@+id/newpass_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/oldpass"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/update_pass"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="NEW PASSWORD"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/newpass_text"
                android:layout_alignStart="@+id/newpass_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify New Password"
                android:id="@+id/verify_pass_text"
                android:textColor="#ff585858"
                android:textSize="18sp"
                android:textIsSelectable="false"
                android:layout_alignStart="@+id/update_pass"
                android:layout_below="@+id/update_pass"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/update_verify_pass"
                android:background="#ff1f5c68"
                android:textSize="15sp"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:hint="VERIFY PASSWORD"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/verify_pass_text"
                android:layout_alignStart="@+id/verify_pass_text" />



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SaveBtn"
                android:background="@drawable/btn_save"
                android:focusableInTouchMode="false"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/oldpass"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
