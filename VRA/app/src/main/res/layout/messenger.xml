<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/Ligher_Green"
        android:orientation="horizontal"
        android:focusable="true"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:id="@+id/Contacts"
                android:layout_centerHorizontal="true"
                android:textSize="28sp"
                android:textIsSelectable="false"
                android:layout_marginTop="10dp"
                android:textColor="@color/Dark_Green" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/Contacts"
                android:id="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/line"
                android:layout_margin="10dp">
            </ListView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:background="@android:drawable/ic_input_add"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/msg_messages"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Person"
                android:id="@+id/Person"
                android:textSize="30sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/Dark_Green"
                android:layout_alignBottom="@+id/icon_person"
                android:layout_toEndOf="@+id/icon_person"
                android:layout_alignStart="@+id/icon_person"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <ImageView
                android:id="@+id/icon_person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="default_profile"
                android:focusable="false"
                android:background="@drawable/default_profile"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:layout_marginStart="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp">
            </ImageView>

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/Person"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/NewMSG"
                android:layout_below="@+id/icon_person">

                <ListView
                    tools:listitem="@layout/row_sms_received"
                    android:id="@+id/SMS_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:headerDividersEnabled="false"
                    android:background="@color/Ligher_Green"
                    android:layout_marginTop="4dp"
                    android:dividerHeight="0dp"
                    android:divider="@null"
                    >

                </ListView>

            </android.support.v4.widget.SwipeRefreshLayout>
            <RelativeLayout
                android:id="@+id/NewMSG"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@color/Ligher_Green"
                android:layout_alignParentEnd="true">

                <EditText
                    android:id="@+id/addSMStext"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/black"
                    android:background="#fff7f7f7"
                    android:textIsSelectable="false"
                    android:inputType="none"
                    android:layout_toStartOf="@+id/addSMSbtn"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingStart="8dp">
                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/addSMSbtn"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textColor="@color/white"
                    android:background="@color/Lime_Green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>