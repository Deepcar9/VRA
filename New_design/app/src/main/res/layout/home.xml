<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome &lt;Bob>"
            android:id="@+id/welcome"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            android:textIsSelectable="false"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:typeface="sans" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile"
            android:background="@drawable/circular_profile"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="152px"
            android:layout_height="152px"
            android:id="@+id/menubg"
            android:background="@layout/bg_repeat"
            android:layout_alignTop="@+id/profile"
            android:layout_toEndOf="@+id/profile"
            android:layout_marginStart="-162px"
            android:layout_marginTop="53px"/>

        <ImageView
            android:layout_width="148px"
            android:layout_height="148px"
            android:id="@+id/menu"
            android:background="@drawable/menu"
            android:layout_alignTop="@+id/profile"
            android:layout_toEndOf="@+id/profile"
            android:layout_marginLeft="-162px"
            android:layout_marginTop="53px"/>

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="243px"
            android:layout_height="243px"
            android:layout_marginLeft="9px"
            android:background="@drawable/default_profile"
            android:layout_alignTop="@+id/profile"
            android:layout_alignStart="@+id/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have completed &lt;10> exercises"
            android:id="@+id/textView"
            android:layout_below="@+id/welcome"
            android:layout_alignStart="@+id/welcome"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Active 10:39"
            android:id="@+id/Last_Active"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/layout"
            android:layout_above="@+id/profile"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/layout"
            android:background="@android:color/white"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@id/profile"
            android:layout_toEndOf="@+id/menubg"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physiotherapist"
                android:id="@+id/textView4"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView"
                android:background="@drawable/plus"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>