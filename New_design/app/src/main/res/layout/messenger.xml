<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#71BCFA"
        android:orientation="horizontal"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contacts"
                android:id="@+id/Contacts"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/Contacts"
                android:id="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/line"
                android:layout_margin="10dp">
            </ListView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:background="@drawable/plus"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/msg_messages"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Person"
                android:id="@+id/Person"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textIsSelectable="true"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/icon_person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_profile"
                android:contentDescription="default_profile"
                android:layout_alignBottom="@+id/Person"
                android:layout_toStartOf="@+id/Person">
            </ImageView>

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/Person"
                android:id="@+id/line2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <ListView
                android:id="@+id/listViewToDo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_list_to_do"
                android:padding="6dip"
                android:layout_below="@+id/line2"
                android:layout_above="@+id/NewMSG">

            </ListView>


            <LinearLayout
                android:id="@+id/NewMSG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#71BCFA"
                android:padding="6dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

                <EditText
                    android:id="@+id/textNewToDo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >
                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/buttonAddToDo"
                    android:layout_width="64dip"
                    android:layout_height="wrap_content"
                    android:text="Add" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>